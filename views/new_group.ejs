<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
  <title>Create Group - <%= appName %></title>
</head>
<body class="d-flex flex-column min-vh-100">

  <%- include('./partials/navbar', { page: 'groups', userId: userId }) %>

  <div class="container py-5 flex-grow-1">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <h2 class="fw-bold text-pink mb-4 text-center">Start a New Group ü§ù</h2>

        <% if (message) { %>
          <div class="alert alert-danger" role="alert"><%= message %></div>
        <% } %>

        <div class="card shadow-sm p-4">
          <form action="/groups" method="POST">

            <div class="mb-4">
              <label for="groupName" class="form-label fw-bold">Group Name</label>
              <input
                type="text"
                class="form-control"
                id="groupName"
                name="name"
                placeholder="e.g., Trip to Goa, Roommates, Weekend Dinner"
                required>
            </div>

            <div class="mb-4">
              <label for="groupDate" class="form-label">Date (optional)</label>
              <input
                type="date"
                class="form-control"
                id="groupDate"
                name="date">
              <div class="form-text">Set a date for the event or leave blank.</div>
            </div>

            <div class="mb-4">
              <label for="groupDescription" class="form-label">Description (optional)</label>
              <textarea id="groupDescription" name="description" class="form-control" rows="3" placeholder="Add a short description..."></textarea>
            </div>

            <div class="mb-4">
              <label for="groupMembers" class="form-label">Members (optional)</label>
              <input
                type="text"
                class="form-control"
                id="groupMembers"
                name="members"
                placeholder="Enter comma-separated emails or user IDs (optional)">
              <div class="form-text">You can add members now or invite later from the group page.</div>
            </div>

            <button type="submit" class="btn btn-gradient w-100">Create Group</button>
            <a href="/groups" class="btn btn-link w-100 mt-2 text-pink text-decoration-none">Cancel and Go Back</a>
          </form>
        </div>
      </div>
    </div>
  </div>

  <%- include('./partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>